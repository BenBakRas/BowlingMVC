@model BowlingMVC.Models.Booking
@{
    ViewData["Title"] = "Book en bane";
}

<div class="text-center">
    <h1 class="display-4">Her kan du booke en bane</h1>
</div>

<div class="container">
    <form asp-controller="Booking" asp-action="Create" method="post">
        <fieldset>
            <legend>Indtast dine oplysninger</legend><br />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="firstName">Fornavn</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Enter your first name" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="lastName">Efternavn</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Enter your last name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="phone">Telefonnummer</label>
                    <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="date">Ønsket dato</label>
                    <input type="text" class="form-control" id="date" placeholder="Select a date" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="noOfPlayers">Antal spillere</label>
                    <select class="form-control" id="noOfPlayers" required>
                        <option value="">Vælg antal spillere</option>
                        @for (int i = 1; i <= 20; i++)
                        {
                            <option value="@i">@i spillere</option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="startDateTime">Ønsket tidspunkt</label>
                    <input id="bookingTime" type="text" class="form-control" placeholder="Select booking time" readonly>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
</div>
