@model BowlingMVC.Models.Customers

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto text-center">
            <h1 class="display-4">Har du bestilt før?</h1>
            <hr class="my-4">
        </div>
    </div>

    <form asp-controller="Customer" asp-action="Create" method="post">
        <legend>Indtast dine oplysninger</legend>
        <br />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstName">Fornavn</label>
                <input type="text" name="firstName" class="form-control" id="firstName" placeholder="Enter your first name" required>
            </div>
            <div class="form-group col-md-6">
                <label for="lastName">Efternavn</label>
                <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Enter your last name" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group col-md-6">
                <label for="phone">Telefonnummer</label>
                <input type="tel" name="phone" class="form-control" id="phone" placeholder="Enter your phone number" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="startDateTime">Ønsket dato</label>
                <input type="text" name="startDateTime" class="form-control" id="datePicker" placeholder="Select a date" required>
            </div>
            <div class="form-group col-md-6">
                <label for="noOfPlayers">Antal spillere</label>
                <select class="form-control" name="noOfPlayers" id="noOfPlayers" required>
                    <option value="">Vælg antal spillere</option>
                    @for (int i = 1; i <= 20; i++)
                    {
                        <option value="@i">@i spillere</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="startDateTime1">Ønsket tidspunkt</label>
                <input id="timePicker" name="startDateTime1" type="text" class="form-control" placeholder="Select booking time" readonly>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-warning">Submit</button>
    </form>
</div>