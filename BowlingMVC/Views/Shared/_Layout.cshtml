<!DOCTYPE html>
<html>
<head>
    <title>Bowling Alley</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/site.css">
    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">Bowling Alley</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-page="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-page="BookNow">Book Now</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-page="Pricing">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-page="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-page="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">Welcome to Our Bowling Alley</h1>
            <p class="lead">Book a lane now and enjoy a memorable bowling experience at our state-of-the-art facility.</p>
            <a href="#" class="btn btn-primary btn-lg">Book Now</a>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="mt-5 bg-dark text-white">
        <div class="container">
            <p>&copy; 2023 Our Bowling Alley. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            var currentPage = getCurrentPage();
            setActiveMenuItem(currentPage);
        });

        // Get the current page from the URL
        function getCurrentPage() {
            var url = window.location.href;
            var page = url.substring(url.lastIndexOf('/') + 1);
            return page.split('?')[0]; // Remove query parameters if any
        }

        // Set the active menu item based on the current page
        function setActiveMenuItem(page) {
            $('.menu a').each(function () {
                if ($(this).data('page') === page) {
                    $(this).addClass('active');
                }
            });
        }
    </script>
</body>
</html>
